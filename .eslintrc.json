{
    "env": {
        "browser": true,
        "es2021": true,
        "greasemonkey": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": ["warn", { "varsIgnorePattern": "^GM_" }],
        "no-undef": "warn",
        "no-empty": "warn"
    },
    "globals": {
        "GM_info": "readonly",
        "GM_addStyle": "readonly",
        "GM_setValue": "readonly",
        "GM_getValue": "readonly",
        "GM_registerMenuCommand": "readonly",
        "GM_unregisterMenuCommand": "readonly",
        "trustedTypes": "readonly"
    }
}
